{{#partial "content"}}
<link rel='stylesheet' href='css/App.css'>
  <link href="https://fonts.googleapis.com/css?family=Cookie|Indie+Flower&display=swap" rel="stylesheet">
<body style="background-image:url('/images/5aa1b61613119.jpg');
             background-repeat:no-repeat;
             background-size: cover;font-family: 'Cookie', cursive;font-size:25px" >
<div class="well" style="opacity:0.8;width:50%">
 <p>name:</p>

    <p>{{ hero.name }}</p>
     <p>Age:</p>

        <p>{{ hero.age }}</p>
         <p>special Power:</p>

            <p>{{ hero.specialPower}}</p>
 <p>Weakness:</p>

    <p>{{ hero.weakness}}</p>
    <h5>Created At:</h5>
    <p> {{ hero.createdAt }}</p>
    <h5>Task status:</h5>
    <p>
        {{#if hero.published }}
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Completed
        {{else}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Open
        {{/if}}

        <a href="/heroes/{{hero.id}}/update">Edit this hero</a><br>
        <a href="/heroes/{{hero.id}}/delete">DELETE this hero (no undo)</a>
    </p>

</div>
</body>
<footer class="footer">
       <p>Esther Carrelle copyright 2019</p>

        </footer>
        <style>
        .footer {
           position: fixed;
           left: 0;
           bottom: 0;
           width: 100%;
           background-color: black;
           color: white;
           text-align: center;
        }
        </style>

{{/partial}}

